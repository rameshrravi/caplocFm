<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#fff"
    android:layout_above="@id/bottom_navigation1"
    android:layout_height="match_parent"
    tools:context=".Dashboard">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        app:srcCompat="@drawable/logo1" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@id/imageView3"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/username"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:fontFamily="@font/nunito_sans_semibold"
                            android:gravity="left"
                            android:lineSpacingExtra="-4sp"
                            android:text="Welcome"
                            android:textColor="#253141"
                            android:textSize="18dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/firstname"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:gravity="top"

                            android:lineSpacingExtra="-1sp"
                            android:text="@string/shahin_alam"
                            android:textAppearance="@style/shahin_alam" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/logoutt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="13dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/logout" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp">

                    <com.github.mikephil.charting.charts.BarChart
                        android:id="@+id/idBarChart"
                        android:layout_width="match_parent"
                        android:layout_height="350dp" />
                    <!--            <ImageView-->
                    <!--                android:id="@+id/imageView4"-->
                    <!--                android:layout_width="match_parent"-->
                    <!--                android:layout_height="wrap_content"-->
                    <!--                app:srcCompat="@drawable/chart" />-->
                </RelativeLayout>

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:alignmentMode="alignMargins"
                    android:columnCount="2"
                    android:columnOrderPreserved="false"
                    android:minWidth="200dp"
                    android:numColumns="auto_fit"
                    android:paddingLeft="0dp"
                    android:paddingRight="0dp"
                    android:rowCount="3"
                    android:rowOrderPreserved="true"
                    android:stretchMode="columnWidth">

                    <RelativeLayout
                        android:id="@+id/relative_super"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/supervisor_checklist"
                            android:layout_width="200dp"
                            android:layout_height="130dp"
                            android:layout_rowWeight="1"
                            android:layout_columnWeight="1"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="10dp"
                            app:cardBackgroundColor="#F5E1E9"
                            app:cardCornerRadius="15dp"
                            app:cardElevation="8dp">

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:layout_marginTop="10dp"
                                android:layout_marginRight="5dp"
                                android:background="@drawable/dot" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal|center_vertical"
                                android:layout_marginLeft="10dp"
                                android:gravity="left"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:layout_gravity="left"
                                    android:layout_marginTop="0dp"
                                    android:padding="0dp"
                                    android:src="@drawable/superviser"></ImageView>

                                <TextView
                                    android:id="@+id/supervisor_"
                                    android:layout_width="wrap_content"
                                    android:layout_height="42dp"
                                    android:layout_marginTop="10dp"
                                    android:gravity="top"
                                    android:lineSpacingExtra="-1sp"
                                    android:text="Supervisor’s Checklist"
                                    android:textAppearance="@style/supervisor_" />

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/relative"

                        android:layout_width="200dp"
                        android:layout_height="wrap_content">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/room_checklist"
                            android:layout_width="200dp"
                            android:layout_height="130dp"
                            android:layout_rowWeight="1"
                            android:layout_columnWeight="1"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="10dp"
                            app:cardBackgroundColor="#E4DB7E"
                            app:cardCornerRadius="15dp"
                            app:cardElevation="8dp">

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:layout_marginTop="10dp"
                                android:layout_marginRight="5dp"
                                android:background="@drawable/dot" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal|center_vertical"
                                android:layout_marginLeft="10dp"
                                android:gravity="left"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:layout_marginTop="0dp"
                                    android:padding="0dp"
                                    android:src="@drawable/rooms"></ImageView>

                                <TextView
                                    android:id="@+id/room_s_chec"
                                    android:layout_width="wrap_content"
                                    android:layout_height="42dp"
                                    android:layout_alignParentLeft="true"
                                    android:layout_alignParentTop="true"
                                    android:layout_marginTop="10dp"
                                    android:gravity="top"
                                    android:lineSpacingExtra="-1sp"
                                    android:text="Room’s Checklist"
                                    android:textAppearance="@style/room_s_chec" />

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="200dp"
                        android:layout_height="wrap_content">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/damaged_checklist"
                            android:layout_width="200dp"
                            android:layout_height="130dp"
                            android:layout_rowWeight="1"
                            android:layout_columnWeight="1"
                            android:layout_margin="10dp"
                            app:cardBackgroundColor="#C7F2A4"
                            app:cardCornerRadius="15dp"
                            app:cardElevation="8dp">

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:layout_marginTop="10dp"
                                android:layout_marginRight="5dp"
                                android:background="@drawable/dot" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal|center_vertical"
                                android:layout_marginLeft="10dp"
                                android:gravity="left"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:layout_gravity="left"
                                    android:layout_marginTop="0dp"
                                    android:padding="0dp"
                                    android:src="@drawable/superviser">

                                </ImageView>

                                <TextView

                                    android:layout_width="wrap_content"
                                    android:layout_height="42dp"
                                    android:layout_marginTop="10dp"
                                    android:gravity="top"
                                    android:lineSpacingExtra="-1sp"
                                    android:text="Damaged item"
                                    android:textAppearance="@style/supervisor_" />

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>


                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="200dp"
                        android:layout_height="wrap_content">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/linen"
                            android:layout_width="200dp"
                            android:layout_height="130dp"
                            android:layout_rowWeight="1"
                            android:layout_columnWeight="1"
                            android:layout_margin="10dp"
                            app:cardBackgroundColor="#D8D9CF"
                            app:cardCornerRadius="15dp"
                            app:cardElevation="8dp">

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:layout_marginTop="10dp"
                                android:layout_marginRight="5dp"
                                android:background="@drawable/dot" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal|center_vertical"
                                android:layout_marginLeft="10dp"
                                android:gravity="left"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:layout_gravity="left"
                                    android:layout_marginTop="0dp"
                                    android:padding="0dp"
                                    android:src="@drawable/linen">

                                </ImageView>

                                <TextView

                                    android:layout_width="wrap_content"
                                    android:layout_height="42dp"
                                    android:layout_marginTop="10dp"
                                    android:gravity="top"
                                    android:lineSpacingExtra="-1sp"
                                    android:text="Linen"
                                    android:textAppearance="@style/supervisor_" />

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>


                    </RelativeLayout>
                </GridLayout>

            </LinearLayout>


        </RelativeLayout>

    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#fff"
        app:itemIconTint="@drawable/selector"
        app:itemRippleColor="@color/black"
        app:itemTextColor="@drawable/selector"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/bottom_navigation" />
</androidx.constraintlayout.widget.ConstraintLayout>
