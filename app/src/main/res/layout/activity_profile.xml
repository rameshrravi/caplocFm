<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile">


        <LinearLayout
            android:id="@+id/linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal"
            android:weightSum="3">
    <LinearLayout
        android:id="@+id/back_arrow"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal">
            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="40dp"
                android:layout_weight="1"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:text="BACK"
                android:textAllCaps="true"
                android:textColor="#000"
                android:textSize="16dp"

                />
    </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginRight="40dp"
                android:layout_weight="1"
                android:drawablePadding="12dp"
                android:drawableTint="@color/white"
                android:fontFamily="@font/nunito_sans_bold"
                android:gravity="center"
                android:text="Profile"
                android:textAllCaps="true"
                android:textColor="#000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="70dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/logo1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/bottom_navigation1"
            android:layout_below="@id/linear"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/rectangle_9"
                    android:layout_width="60dp"
                    android:layout_height="60dp"

                    android:layout_marginLeft="13dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/img_1" />

                <View
                    android:id="@+id/ellipse_1"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="43dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/camera" />

                <ImageView
                    android:id="@+id/logout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="25dp"
                    app:srcCompat="@drawable/logout" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:gravity="center_vertical">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:gravity="center"
                    android:lineSpacingExtra="7sp"
                    android:text="First Name : "
                    android:textAppearance="@style/first_name_"

                    />

                <EditText
                    android:id="@+id/firstname"
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="130dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="6dp"
                    android:editable="false"
                    android:focusable="false"
                    android:background="@drawable/rounded_cornered_edittext_border"
                    android:backgroundTint="#F1F5F9"
                    android:drawablePadding="12dp"
                    android:drawableTint="@color/black"
                    android:fontFamily="@font/nunito_sans_semibold"
                    android:hint="First Name"
                    android:inputType="text"
                    android:padding="12dp"
                    android:text="Robert"
                    android:textColor="@color/black"
                    android:textColorHint="@color/graydark"
                    android:textSize="14sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:gravity="center_vertical">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:gravity="center"
                    android:lineSpacingExtra="7sp"
                    android:text="Last Name : "
                    android:textAppearance="@style/first_name_"

                    />

                <EditText
                    android:id="@+id/lastname"
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="130dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="6dp"
                    android:editable="false"
                    android:focusable="false"
                    android:background="@drawable/rounded_cornered_edittext_border"
                    android:backgroundTint="#F1F5F9"
                    android:drawablePadding="12dp"
                    android:drawableTint="@color/black"
                    android:fontFamily="@font/nunito_sans_semibold"
                    android:hint="Last Name"
                    android:inputType="text"
                    android:padding="12dp"
                    android:text="Testing"
                    android:textColor="@color/black"
                    android:textColorHint="@color/graydark"
                    android:textSize="14sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:gravity="center_vertical">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:gravity="center"
                    android:lineSpacingExtra="7sp"
                    android:text="Shift Type : "
                    android:textAppearance="@style/first_name_"

                    />

                <EditText
                    android:id="@+id/shifttype"
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="130dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="6dp"
                    android:editable="false"
                    android:focusable="false"
                    android:background="@drawable/rounded_cornered_edittext_border"
                    android:backgroundTint="#F1F5F9"
                    android:drawablePadding="12dp"
                    android:drawableTint="@color/black"
                    android:fontFamily="@font/nunito_sans_semibold"
                    android:hint="Shift Type"
                    android:inputType="text"
                    android:padding="12dp"
                    android:text="DayShift"
                    android:textColor="@color/black"
                    android:textColorHint="@color/graydark"
                    android:textSize="14sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:gravity="center_vertical">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:gravity="center"
                    android:lineSpacingExtra="7sp"
                    android:text="Mobile No : "
                    android:textAppearance="@style/first_name_"

                    />

                <EditText
                    android:id="@+id/mobileno"
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="130dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="6dp"
                    android:background="@drawable/rounded_cornered_edittext_border"
                    android:backgroundTint="#F1F5F9"
                    android:drawablePadding="12dp"
                    android:drawableTint="@color/black"
                    android:fontFamily="@font/nunito_sans_semibold"
                    android:hint="User Type"
                    android:inputType="text"
                    android:padding="12dp"
                    android:editable="false"
                    android:focusable="false"
                    android:text="9877675673"
                    android:textColor="@color/black"
                    android:textColorHint="@color/graydark"
                    android:textSize="14sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:visibility="gone"
                android:layout_marginLeft="15dp"
                android:gravity="center_vertical">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:gravity="center"
                    android:lineSpacingExtra="7sp"
                    android:text="User Name : "
                    android:textAppearance="@style/first_name_"

                    />

                <EditText
                    android:id="@+id/username"
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="130dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="6dp"
                    android:background="@drawable/rounded_cornered_edittext_border"
                    android:backgroundTint="#F1F5F9"
                    android:drawablePadding="12dp"
                    android:drawableTint="@color/black"
                    android:fontFamily="@font/nunito_sans_semibold"
                    android:hint="User Name"
                    android:inputType="text"
                    android:padding="12dp"
                    android:text="Caploc"
                    android:textColor="@color/black"
                    android:textColorHint="@color/graydark"
                    android:textSize="14sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:visibility="gone"
                android:gravity="center_vertical">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:gravity="center"
                    android:lineSpacingExtra="7sp"
                    android:text="Password : "
                    android:textAppearance="@style/first_name_"

                    />

                <EditText
                    android:id="@+id/password"
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="130dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="6dp"
                    android:background="@drawable/rounded_cornered_edittext_border"
                    android:backgroundTint="#F1F5F9"
                    android:drawablePadding="12dp"
                    android:drawableTint="@color/black"
                    android:fontFamily="@font/nunito_sans_semibold"
                    android:hint="Password"
                    android:inputType="numberPassword"
                    android:padding="12dp"
                    android:text="1234567"
                    android:textColor="@color/black"
                    android:textColorHint="@color/graydark"
                    android:textSize="14sp" />
            </RelativeLayout>


            <TextView
                android:id="@+id/text_submit"
                android:layout_width="300dp"
                android:layout_height="60dp"

                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:background="@drawable/rounded_rectangular_cornered_edittext_color_primary"

                android:fontFamily="@font/nunito_sans_bold"
                android:gravity="center"
                android:paddingLeft="48dp"
                android:paddingTop="10dp"
                android:paddingRight="48dp"
                android:paddingBottom="10dp"
                android:text="Update Profile"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#fff"
        app:itemIconTint="@drawable/selector"
        app:itemRippleColor="@color/black"
        app:itemTextColor="@drawable/selector"
        app:menu="@menu/bottom_navigation" />
</RelativeLayout>